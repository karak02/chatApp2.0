{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src" 
  },
  "include": ["src/**/*"], // This should point to your TypeScript files
  "exclude": ["node_modules"] 
}
